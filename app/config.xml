<?xml version='1.0' encoding='utf-8'?>
<widget id="com.teamorion.leapinit" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LeapIn.it</name>
    <icon src="icon.png" />
    <splash src="splash.png" />
    <description>
        LeapIn.it is a social network designed for mobile devices which encourages people to form groups based on their interests.
    </description>
    <author email="dev@leapin.it" href="http://leapin.it">
        LeapIn.it
    </author>
    <content src="index.html" />
    <access origin="http://192.168.1.66" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#FF9500" />
    <engine name="android" spec="~5.1.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~3.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.2" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~1.6.1" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~4.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <plugin name="cordova-plugin-camera" spec="~2.1.1" />
    <plugin name="com.sarriaroman.PhotoViewer" spec="~1.1.5" />
    <plugin name="cordova-plugin-geolocation" spec="~2.1.0" />
    <platform name="android">
        <preference name="AndroidLaunchMode" value="singleTop"/>
        <preference name="android-maxSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="22" />
    </platform>
</widget>
