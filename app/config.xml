<?xml version='1.0' encoding='utf-8'?>
<widget id="com.teamorion.leapinit" version="2.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LeapIn.it</name>
    <icon src="icon.png" />
    <splash src="splash.png" />
    <description>
        LeapIn.it is a social network designed for mobile devices which encourages people to form groups based on their interests.
    </description>
    <author email="dev@leapin.it" href="http://leapin.it">
        LeapIn.it
    </author>
    <content src="index.html" />
    <access origin="https://56f4132f.ngrok.io" />
    <preference name="BackgroundColor" value="0xffffffff" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#FF9500" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="6000" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashMaintainAspectRatio" value="false" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="FadeSplashScreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="600"/>
    <preference name="ShowSplashScreenSpinner" value="false" />
    <engine name="android" spec="~5.1.1" />
    <platform name="android">
        <preference name="AndroidLaunchMode" value="singleTop" />
        <preference name="android-maxSdkVersion" value="22" />
        <preference name="android-targetSdkVersion" value="22" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="~3.1.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.1.2" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~4.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.1" />
    <plugin name="cordova-plugin-camera" spec="~2.1.1" />
    <plugin name="com.sarriaroman.PhotoViewer" spec="~1.1.5" />
    <plugin name="cordova-plugin-geolocation" spec="~2.1.0" />
    <plugin name="com.darktalker.cordova.screenshot" spec="https://github.com/gitawego/cordova-screenshot.git" />
    <plugin name="cordova-plugin-x-socialsharing" spec="~5.0.12" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="https://github.com/crosswalk-project/cordova-plugin-crosswalk-webview" />
    <plugin name="com.internrocket.plugins.statusbarcolor" spec="https://github.com/internrocket/cordova-plugin-StatusBarColor.git" />
</widget>
